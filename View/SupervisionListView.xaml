<UserControl x:Class="RAP.View.SupervisionListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RAP.View"
      mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <Grid>
            <Label Content="Supervision List" DockPanel.Dock="Left" Style="{StaticResource HeaderStyle}"/>
            <Button Content="x" HorizontalAlignment="Right" Click="Button_Click" Height="30" Width="30" />
        </Grid>
        
        <ListBox Grid.Row="1" ItemsSource="{Binding Supervisees}" BorderThickness="0"/>
    </StackPanel>
</UserControl>
